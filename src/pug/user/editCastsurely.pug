doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    link(rel='stylesheet', type='text/css', href='/static/lib/mui.min.css')
    link(rel='stylesheet', type='text/css', href='/static/lib/mui.picker.all.css')
    link(rel='stylesheet', type='text/css', href='/static/css/main.css')
    script(type='text/javascript', src='/static/lib/mui.js')
    script(type='text/javascript', src='/static/lib/util.js')
    script(type='text/javascript', src='/static/lib/moment.js')
    title 定投修改
    script(type='text/javascript').
      setAdaptive();
  body.fund-fundBuy.white.buy.user-editCastsurely
    header#header.mui-bar.mui-bar-nav
      a.mui-icon.mui-icon-left-nav.mui-pull-left
      h1.mui-title 定投修改
    .content-body
      .ruifuBuy_title=fundName
      span=fundCode
      .mui-input-row
        label 购买金额
        if limits=[]
          input#balance-input(type='number', placeholder=('基金不限额'))
        else
          input#balance-input(type='number', placeholder=('最低购买金额' + limits[0].minValue + '元'))
      div#estimateCost
      .ruifuBuy_title 定投设置
      ul.dingtou_edit
        li
          a#period-btn
            span 定投周期
            span#period-text 月
            span.icon_r
        li
          a#date-btn
            span 定投日期
            span#date-text 1日
            span.icon_r
      .ruifuBuy_title 支付方式
      ul.mui-table-view
        li.mui-table-view-cell#select-pay
          .icon(class=banks[0].bankCode)
          .text-block
            .title=banks[0].bankName + '(****' + banks[0].userBankNo.substr(-4, 4) + ')'
            //.content=(banks[0].singleDealMaxValue === -1 ? '银行单笔不限额，' : '银行单笔限额' + banks[0].singleDealMaxValue + '元，') + (banks[0].dayDealRetainMaxValue === -1 ? '单日不限额，' : '单日剩余额度' + banks[0].dayDealRetainMaxValue + '元，') + (banks[0].monthDealRetainMaxValue === -1 ? '单月不限额，' : '单月剩余额度' + banks[0].monthDealRetainMaxValue + '元')
          span.mui-navigate-right
      button#buy-btn.mui-btn.mui-btn-warning.center(type='button') 修改
      .company-warn
        p 基金销售服务由杭州科地瑞富基金销售有限公司提供
        p 基金历史业绩不预示未来表现，市场有风险，投资需谨慎
      .mui-popover.mui-popover-bottom
        .mui-popover-arrow.mui-bottom 请选择支付方式
          .mui-icon.mui-icon-closeempty
        ul.mui-table-view
          each bank,index in banks
            li.mui-table-view-cell(class=index == 0 ? 'active' : '' data-index=index data-canuse=bank.canUse === true ? 'true' : 'true')
              .icon(class=bank.bankCode)
              .text-block
                .title=bank.bankName + '(****' + bank.userBankNo.substr(-4, 4) + ')'
                //.content=(bank.singleDealMaxValue === -1 ? '银行单笔不限额，' : '银行单笔限额' + bank.singleDealMaxValue + '元，') + (bank.dayDealRetainMaxValue === -1 ? '单日不限额，' : '单日剩余额度' + bank.dayDealRetainMaxValue + '元，') + (bank.monthDealRetainMaxValue === -1 ? '单月不限额，' : '单月剩余额度' + bank.monthDealRetainMaxValue + '元')
              span.mui-icon.mui-icon-checkmarkempty
      .mui-popup-backdrop
      .password-popup
        .password-popup-inner
          .password-popup-title 请输入交易密码
          .password-popup-box-wrap
            .box-item
              .point
            .box-item
              .point
            .box-item
              .point
            .box-item
              .point
            .box-item
              .point
            .box-item
              .point
          .password-popup-input
            input#password-input(type='number' placeholder='')
        .password-popup-buttons
          span.password-popup-button.cancel 取消
          span.password-popup-button.confirm 确定
    script(type='text/javascript', src='/static/js/commonBody.js')
